<p id="notice"><%= notice %></p>

<h1>所持品</h1>

<table>
  <thead>
    <h2>持っている</h2>
    <tr>
      <th><%= sortable "title_syo", "タイトル" %></th>
      <th><%= sortable "artist", "アーティスト名" %></th>
      <th>ジャケット</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @syojis1.each do |syoji| %>
      <tr>
        <td><%= syoji.title_syo %></td>
        <td><%= syoji.artist %></td>
        <td><% if syoji.color_id.present? %>
        <%= syoji.genre.image_g %>
    <% end %></td>
        <td><%= syoji.title_j %></td>
        <td><% if syoji.image_syo.present? %>
          <%= image_tag show_image_syoji_path(syoji), :height =>60 %>
        <% else %>
        <% end %></td>
        <td><%= syoji.memo_syo %></td>
        <td><% if syoji.url_syo.present? %>
              <%= link_to 'HPへ', syoji.url_syo %>
            <% end %></td>
        <td><%= syoji.release.strftime('20%y/%m/%d') %></td>
        <td><%= syoji.have %></td>
        <td><%= link_to '詳細', syoji %></td>
        <td><%= link_to '編集', edit_syoji_path(syoji) %></td>
        <td><%= link_to '削除', syoji, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


