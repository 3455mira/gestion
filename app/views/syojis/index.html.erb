<p id="notice"><%= notice %></p>

<div class="box14"><h1>グッズ</h1></div>

<p><%= link_to '新規追加', new_syoji_path , target:"_self" %> </p>

<table>
  <thead>
  <br><div class="box17"><h2>持っている</h2></div>
    <tr>
    <br>
    <div class="box22"><p><%= sortable "title_syo", "タイトル" %></p></div>
    <div class="box22"><p><%= sortable "artist", "アーティスト名" %></p></div>
    <div class="box22"><p>ジャケット</p></div>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @syojis1.each do |syoji| %>
      <tr>
      <br>
      <div class="box1"><p><%= syoji.title_syo %></div>
      <div class="box1"><p><%= syoji.artist %></div>
      <div class="box1"><p><% if syoji.image_syo.present? %>
          <%= image_tag show_image_syoji_path(syoji), :height =>60 %>
        <% else %>
        <% end %></div>
        <div class="box1"><p><%= link_to '詳細', syoji , target:"_self" %></div>
        <div class="box1"><p><%= link_to '編集', edit_syoji_path(syoji) , target:"_self" %></div>
        <div class="box1"><p><%= link_to '削除', syoji, method: :delete, data: { confirm: '削除しますか？' } %></div>
      </tr>
    <% end %>
  </tbody>
</table>


<table>
<thead>
<br><div class="box17"><h2>欲しい（発売済み）</h2></div>
  <tr>
  <br>
  <div class="box22"><p><%= sortable "title_syo", "タイトル" %></p></div>
  <div class="box22"><p><%= sortable "artist", "アーティスト名" %></p></div>
  <div class="box22"><p>ジャケット</p></div>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @syojis2.each do |syoji| %>
    <tr>
    <br>
    <div class="box1"><p><%= syoji.title_syo %></div>
    <div class="box1"><p><%= syoji.artist %></div>
    <div class="box1"><p><% if syoji.image_syo.present? %>
        <%= image_tag show_image_syoji_path(syoji), :height =>60 %>
      <% else %>
      <% end %></div>
          <div class="box1"><p><%= link_to '詳細', syoji , target:"_self" %></div>
          <div class="box1"><p><%= link_to '編集', edit_syoji_path(syoji) , target:"_self" %></div>
          <div class="box1"><p><%= link_to '削除', syoji, method: :delete, data: { confirm: '削除しますか？' } %></div>
