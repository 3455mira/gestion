<p id="notice"><%= notice %></p>

<div class="box14"><h1>スケジュール</h1></div>

<% today = Date.today %>
<% now = Date.current %>
<table border="1">
  <caption><%= now.strftime('%Y年%m月') %></caption>
  <tr height="30px">
    <th width="60px" style="background: #ff9ba0;"><spen style="color: white;"> 日</spen></th>
    <th width="60px" style="background: #a5d3fd"><spen style="color: white;">月</spen></th>
    <th width="60px" style="background: #a5d3fd;"><spen style="color: white;">火</spen></th>
    <th width="60px" style="background: #a5d3fd;"><spen style="color: white;">水</spen></th>
    <th width="60px" style="background: #a5d3fd;"><spen style="color: white;">木</spen></th>
    <th width="60px" style="background: #a5d3fd;"><spen style="color: white;">金</spen></th>
    <th width="60px" style="background: #76aeee;"><spen style="color: white;">土</spen></th>
  </tr>
  <tr>
<% month = now.strftime('%m') %>
<% d = now.at_beginning_of_month.at_beginning_of_week(:sunday) %>
<% 1.upto(6).each do |i| %>
  <tr height="70px">
<% (d..d.end_of_week(:sunday)).each do |c| %>
  <td align="left" valign="top" style="background: <%= (c == today) ? "#ffd0d0;" : "white" %>;">
    <%= (c.strftime('%m') == month) ? c.strftime('%d') : " " %><br>
    <% @sches.each do |sche| %>
      <% if c.strftime('%y-%m-%d') == sche.schedule_at.strftime('%y-%m-%d') %>
       <%= sche.icon_id %>
      <% end %>
    <% end %>
  </td>
<% end %>
  </tr>
<% d = d + 1.week %>
<% end %>
</table>

<table>
  <thead>
    <tr>

    <div class="box22"><p><%= sortable "schedule_at", "日時" %></p></div>
    <div class="box22"> <p>予定名</p></div>
    <div class="box22"><p><%= sortable "icon_id", "アイコン" %></p></div>
    <div class="box22"><p>場所</p></div>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sches.each do |sche| %>
      <% if sche.schedule_at < Date.today
           namecolor = "red"
        else
          if sche.schedule_at >= Date.today and sche.schedule_at <= Date.today + 5
            namecolor = "blue"
          else
            namecolor = "black"
          end
        end
       %>
      <% if sche.schedule_at >= Date.today - 7 and sche.schedule_at <= Date.today + 7 %> 
      <tr>
      <br>
      <div class="box1"><p style = "color : <%= namecolor %>">
        <% if sche.syujitsu == true %>
          <%= sche.schedule_at.strftime('20%y/%m/%d') %>
          終日
        <% else %>
          <%= sche.schedule_at.strftime('20%y/%m/%d %H:%M') %>
        <% end %></p></div>
        <div class="box1"><p><%= sche.name_sche %></p></div>
        <div class="box1"> <p><%= image_tag sche.icon.image_icon ,:height =>45 %></p></div>
        <div class="box1"><p><%= sche.place %></p></div>
        <div class="box1"><p><%= link_to '詳細', sche , target:"_self" %></p></div>
        <div class="box1"><p><%= link_to '編集', edit_sch_path(sche) , target:"_self" %></p></div>
        <div class="box1"><p><%= link_to '削除', sche, method: :delete, data: { confirm: '削除しますか？' } %></p></div>
        <td style = "color : <%= namecolor %>">
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

