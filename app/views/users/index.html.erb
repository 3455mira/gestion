<p id="notice"><%= notice %></p>

<h1>アカウント</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>パスワード</th>
      <th>アイコン画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name_user %></td>
        <td><%= user.mail_user %></td>
        <td><%= user.pass_user %></td>
        <td><%= user.icon_user %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規アカウント作成', new_user_path %>
