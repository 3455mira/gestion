<p id="notice"><%= notice %></p>
<div class="box14">
<h2>発売日</h2></div>
<% kensu = 0 %>
<% @syoji_ts.each do |syoji_t| %>
  <% if syoji_t.release.present? %>
    <% if syoji_t.release >= Date.today and syoji_t.release <= Date.today + 5
       kensu += 1
    end %>
  <% end %>
<% end %>
<br>
<div class="box17">
<p><strong>５日以内に発売するものが <%= kensu %> 件あります</strong></p></div>

<table>
  <thead>
    <tr>
    <br>
    <div class="box22"><p>発売日</p></div>
    <div class="box22"><p>タイトル</p></div>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @syoji_ts.each do |syoji_t| %>
      <% if syoji_t.notification_syo == true %>
      <% if syoji_t.release.present? %>
        <% if syoji_t.notification_time <= DateTime.now %>
          <% if syoji_t.release < Date.today
               namecolor = "red"
             end %>
        <tr>
        <br>
          <div class="box1"><p style = "color : <%= namecolor %>"><%= syoji_t.release.strftime('20%y/%m/%d') %></p></div>
          <div class="box1"><p><%= syoji_t.title_syo %></p></div>
          <div class="box1"><p><%= link_to '詳細', syoji_t %></div>
          <div class="box1"><p><%= link_to '編集', edit_syoji_path(syoji_t) %></div>
          <div class="box1"><p><%= link_to '削除', syoji_t, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </tr>
        <% end %>
      <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>



<div class="box14"><h2>スケジュール</h2></div>
<% kensu = 0 %>
<% @sche_ts.each do |sche_t| %>
  <% if sche_t.schedule_at >= Date.today and sche_t.schedule_at <= Date.today + 5
  kensu += 1
   end %>
<% end %>
<br>
<div class="box17"><p><strong>５日以内に期限がくるものが <%= kensu %> 件あります</strong></p></div>

<table>
  <thead>
    <tr>
    <br>
    <div class="box22"><p>日時</p></div>
    <div class="box22"><p>予定名</p></div>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sche_ts.each do |sche_t| %>
      <% if sche_t.notification_sche == true %>
        <% if sche_t.notification_time <= DateTime.now %>
          <% if sche_t.schedule_at < Date.today
               namecolor = "red"
             end
          %>
        <tr>
        <br>
        <div class="box1"><p style = "color : <%= namecolor %>"><%= sche_t.schedule_at.strftime('20%y/%m/%d %H:%M') %></p></div>
        <div class="box1"><p><%= sche_t.name_sche %></div>
        <div class="box1"><p><%= link_to '詳細', sche_t %></div>
        <div class="box1"><p><%= link_to '編集', edit_sch_path(sche_t) %></div>
        <div class="box1"><p><%= link_to '削除', sche_t, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
